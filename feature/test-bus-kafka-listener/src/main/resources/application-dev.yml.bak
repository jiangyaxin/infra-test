server:
  port: 30004

spring:
  application:
    name: bus-kafka-listener
  cloud:
    bus:
#      是否开启，默认为 true
      enabled: true
#      目标消息队列，默认为 springCloudBus
      destination: springCloudBus
      ack:
#        收到event,回复ack event,默认 为true
        enabled: false
      trace:
        enabled: false
    stream:
      kafka:
        binder:
          brokers:
            - 1.12.236.101:9001
            - 1.12.236.101:9002
            - 1.12.236.101:9003
          required-acks: 1
      bindings:
        springCloudBusInput:
          group: ${spring.application.name}

logging:
  file:
    name: ${spring.application.name}
    path: ./target/logs
  level:
    root: INFO

logstash:
  destination: "1.12.236.101:4560"

app:
  enabled-cached-id-generator: true
  cluster:
    data-center-id: 1
    worker-id: 1